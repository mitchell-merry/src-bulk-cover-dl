{
    "compilerOptions": {
        "module": "esnext",
        "target": "ES2017",
        "moduleResolution": "node",
        "strict": true,
        
        "noImplicitAny": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,

        "declaration": true,
        "outDir": "./dist"
    }
}